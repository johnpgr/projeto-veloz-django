# Force all files to use LF
* text=auto eol=lf

# Explicitly declare files that should always use LF
*.sh    text eol=lf
*.bash  text eol=lf
*.py    text eol=lf
*.js    text eol=lf
*.jsx   text eol=lf
*.ts    text eol=lf
*.tsx   text eol=lf
*.css   text eol=lf
*.scss  text eol=lf
*.html  text eol=lf
*.xml   text eol=lf
*.json  text eol=lf
*.yml   text eol=lf
*.yaml  text eol=lf
*.md    text eol=lf
*.txt   text eol=lf

# Denote all files that are truly binary and should not be modified
*.png   binary
*.jpg   binary
*.gif   binary
*.ico   binary
*.zip   binary
*.pdf   binary
